<center>
<div style="border: 3px solid black; width: 50%; margin: 3%;">
<h1> Blog posts </h1>
<div style="margin-left: -90%;">
<% @posts.each do |post| %>  
    <div class="well">
        <h6><b> <%= post.title %></b></h6>
        &nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Read More", post_path(post), :class => 'btn btn-default' %>
    </div>
<% end %>
</div>
</div>
</center>